@model CourseEvaluationSystem.Models.Course
@{
    ViewData["Title"] = "Course Summary";
}

<h2 class="mb-4">Summary for <strong>@Model.Title</strong></h2>

<p><strong>Average Rating:</strong> @ViewBag.AverageRating</p>

<h4 class="mt-4">Comments:</h4>
@if (Model.Evaluations.Any())
{
    <ul class="list-group">
        @foreach (var eval in Model.Evaluations)
        {
            <li class="list-group-item">
                <strong>@eval.Student.Name:</strong> @eval.Comment ?? "<em>No comment</em>"
            </li>
        }
    </ul>
}
else
{
    <p>No evaluations yet.</p>
}

<a class="btn btn-secondary mt-3" href="/Course/Index">Back to Courses</a>
