@model IEnumerable<CourseEvaluationSystem.Models.Course>

<h2>Available Courses</h2>
<a class="btn btn-success mb-2" href="/Course/Create">Add Course</a>
<table class="table table-bordered">
    <tr><th>Title</th><th>Avg Rating</th><th>Action</th></tr>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Title</td>
            <td>@(c.AverageRating == 0 ? "No ratings" : c.AverageRating.ToString("0.0"))</td>
            <td><a class="btn btn-primary" href="/Evaluation/Create?courseId=@c.ID">Evaluate</a></td>
        </tr>
    }
</table>
<a class="btn btn-warning mt-2" href="/Evaluation/MyEvaluations">My Evaluations</a>
