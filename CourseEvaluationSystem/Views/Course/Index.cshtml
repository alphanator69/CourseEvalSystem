@model IEnumerable<CourseEvaluationSystem.Models.Course>

<h2>Available Courses</h2>
<a href="/Course/Create" class="btn btn-success mb-3">Add Course</a>

@if (!Model.Any())
{
    <p>No courses available. Add a course first.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Course Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>
                        <a class="btn btn-primary" href="/Evaluation/Create?courseId=@course.ID">Evaluate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="/Evaluation/MyEvaluations" class="btn btn-warning mt-3">My Evaluations</a>
